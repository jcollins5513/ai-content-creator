rules_version = '2';

// Firebase Storage Security Rules for AI Content Creator Platform
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate image file types
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.contentType in ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
    }
    
    // Helper function to check file size limits (10MB for free tier, 50MB for premium)
    function isValidFileSize() {
      return request.resource.size <= 10 * 1024 * 1024; // 10MB limit for now
    }
    
    // User images storage path: users/{userId}/images/{category}/{imageId}
    match /users/{userId}/images/{category}/{imageId} {
      // Allow read access to user's own images
      allow read: if isOwner(userId);
      
      // Allow upload of new images with validation
      allow create: if isOwner(userId) && 
                       isValidImageType() && 
                       isValidFileSize() &&
                       category.matches('^[a-zA-Z0-9_-]+$'); // Valid category name
      
      // Allow update/delete of user's own images
      allow update, delete: if isOwner(userId);
    }
    
    // User thumbnails storage path: users/{userId}/thumbnails/{category}/{imageId}
    match /users/{userId}/thumbnails/{category}/{imageId} {
      // Allow read access to user's own thumbnails
      allow read: if isOwner(userId);
      
      // Allow creation of thumbnails (generated by client or cloud function)
      allow create: if isOwner(userId) && 
                       isValidImageType() &&
                       request.resource.size <= 1 * 1024 * 1024; // 1MB limit for thumbnails
      
      // Allow update/delete of user's own thumbnails
      allow update, delete: if isOwner(userId);
    }
    
    // User exported designs storage path: users/{userId}/exports/{designId}
    match /users/{userId}/exports/{designId} {
      // Allow read access to user's own exported designs
      allow read: if isOwner(userId);
      
      // Allow creation of exported designs
      allow create: if isOwner(userId) && 
                       isValidImageType() &&
                       request.resource.size <= 20 * 1024 * 1024; // 20MB limit for exports
      
      // Allow update/delete of user's own exports
      allow update, delete: if isOwner(userId);
    }
    
    // User background-removed images storage path: users/{userId}/processed/{imageId}
    match /users/{userId}/processed/{imageId} {
      // Allow read access to user's own processed images
      allow read: if isOwner(userId);
      
      // Allow creation of processed images (background removed)
      allow create: if isOwner(userId) && 
                       isValidImageType() &&
                       isValidFileSize();
      
      // Allow update/delete of user's own processed images
      allow update, delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}